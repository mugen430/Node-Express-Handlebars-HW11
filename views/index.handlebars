<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12 burger-bg" style="padding-bottom: 20px;">
	        <h1>Burger Brigade</h1>
			<hr>
	    </div>

	<div class="row">
	    <div class="col-sm-6 color">
			<br>
			<h2>Devour Burger List</h2>
			<hr>
			<ol>
			  {{#each burgers}}
			    {{#unless this.devoured}}				
			      <li>
			        {{this.burger_name}}
					<button class="dvrButton" data-id="{{id}}" data-newdevour="{{burger_name}}">
					Devour It
					</button>
			      </li>
			    {{/unless}}
			  {{/each}}
			</ol>

	    </div>
	    <div class="col-sm-6 color">
			<h2>Burgers That Have Been Eaten!</h2>
			<hr>
			<ol>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}
			</ol>
	    </div>
  	</div>
	<div class="row color">
	    <div class="center col-sm-5">
			<h2>Add more burgers</h2>
			<hr>

			<form class="create-form">
			  <div class="form-group">
			    <input type="text" placeholder = "burger" id="ca" name="burger_name">
			  </div>
			  <button class="btn-primary" type="submit">More burgers!!!!!</button>
			</form>
	    </div>
  	</div>
  </div>
</div>
	